{{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
<!-- Affichage des erreurs du formulaire -->
{% if not form.vars.valid %}
    <div class="alert alert-danger">
        {{ form_errors(form.nom) }}
        {{ form_errors(form.prenom) }}
        {{ form_errors(form.gsm) }}
        {{ form_errors(form.email) }}
    </div>
{% endif %}


<div class="form-group">
    {{ form_label(form.nom, "Nom", {'label_attr':{'class':'col-sm-1 control-label'}}) }}
    <div class="col-sm-4">
        {{ form_widget(form.nom, {'attr':{'class':'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.prenom, "Prénom", {'label_attr':{'class':'col-sm-1 control-label'}}) }}
    <div class="col-sm-4">
        {{ form_widget(form.prenom, {'attr':{'class':'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.gsm, "GSM", {'label_attr':{'class':'col-sm-1 control-label'}}) }}
    <div class="col-sm-4">
        {{ form_widget(form.gsm, {'attr':{'class':'form-control'}}) }}
    </div>
</div>

<div class="form-group">
    {{ form_label(form.email, "Email", {'label_attr':{'class':'col-sm-1 control-label'}}) }}
    <div class="col-sm-4">
        {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
    </div>
</div>

<a href="{{ path('cf_centre_formateur') }}" class="btn btn-default col-lg-offset-1">
    <span class="glyphicon glyphicon-chevron-left"></span>
    Retour à la liste
</a>
{% if form.ajouter is defined %}
    {{ form_widget(form.ajouter, {'attr':{'class':'btn btn-primary'}}) }}
{% else %}
    {{ form_widget(form.modifier, {'attr':{'class':'btn btn-primary'}}) }}
{% endif %}

{{ form_widget(form.effacer, {'attr':{'class':'btn btn-danger'}}) }}

{{ form_rest(form) }}
{{ form_end(form) }}